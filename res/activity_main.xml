<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:maxHeight="100dp"
                android:maxWidth="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/spectrum"/>



            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/title"
                android:textSize="32sp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/titleDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="32dp"
                android:textAlignment="center"
                android:textSize="16sp"
                android:text="@string/titleDescription"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/name" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="first name" />


            <!--Question 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="48dp"
                android:text="@string/question1" />

            <RadioGroup
                android:id="@+id/question_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RadioButton
                    android:id="@+id/question_1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question1a" />

                <RadioButton
                    android:id="@+id/question_1b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question1b" />


                <RadioButton
                    android:id="@+id/question_1c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question1c" />

                <RadioButton
                    android:id="@+id/question_1d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question1d" />


            </RadioGroup>


            <!--Question 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="48dp"
                android:text="@string/question2" />

            <RadioGroup
                android:id="@+id/question2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/question_2a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question2a" />

                <RadioButton
                    android:id="@+id/question_2b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question2b" />

                <RadioButton
                    android:id="@+id/question_2c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question2c" />

                <RadioButton
                    android:id="@+id/question_2d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question2d" />
            </RadioGroup>


            <!--Question 3-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="48dp"
                android:text="@string/question3" />

            <RadioGroup
                android:id="@+id/question3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/question_3a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question3a" />

                <RadioButton
                    android:id="@+id/question_3b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question3b" />

                <RadioButton
                    android:id="@+id/question_3c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question3b" />

                <RadioButton
                    android:id="@+id/question_3d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question3d" />
            </RadioGroup>


            <!--Question 4-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="48dp"
                android:text="@string/question4" />

            <RadioGroup
                android:id="@+id/question4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/question_4a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question4a" />

                <RadioButton
                    android:id="@+id/question_4b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question4b" />

                <RadioButton
                    android:id="@+id/question_4c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question4c" />

                <RadioButton
                    android:id="@+id/question_4d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question4d" />
            </RadioGroup>

            <!--Question 5 with CheckBox-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="48dp"
                android:text="@string/question5" />

            <CheckBox
                android:id="@+id/question_5a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question5a" />

            <CheckBox
                android:id="@+id/question_5b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question5b" />

            <CheckBox
                android:id="@+id/question_5c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question5c" />

            <CheckBox
                android:id="@+id/question_5d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question5d" />

            <!--Question 6-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="48dp"
                android:text="@string/question6" />

            <RadioGroup
                android:id="@+id/question6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/question_6a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question6a" />

                <RadioButton
                    android:id="@+id/question_6b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question6b" />

                <RadioButton
                    android:id="@+id/question_6c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question6c" />

                <RadioButton
                    android:id="@+id/question_6d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question6d" />
            </RadioGroup>

            <!--Question 7-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="48dp"
                android:text="@string/question7" />


            <EditText
                android:id="@+id/question_7a"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/question7a" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp">

                <Button
                    android:id="@+id/submitButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="totalScore"
                    android:text="@string/submit" />

                <Button
                    android:id="@+id/email_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:onClick="emailButton"
                    android:text="@string/email" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>